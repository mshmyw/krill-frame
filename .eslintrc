{
  "extends": ["eslint:recommended"],
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
      ],
      "plugins": ["@typescript-eslint"],
      "parser": "@typescript-eslint/parser"
    }
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "env": {
    "node": true
  }
}
