{
  "name": "web-framework",
  "license": "GPL-3.0",
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "clear": "rimraf '{packages,tools}/*/{lib,dist,node_modules}' && rimraf node_modules",
    "bootstrap": "pnpm install && rm -rf .husky && husky install && husky add .husky/pre-commit \"npx --no-install lint-staged\" && husky add .husky/commit-msg \"npx --no-install commitlint --edit \"\" \"",
    "start": "pnpm --filter=@krill/web-framework-container start",
    "build": "pnpm build"
  },
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@babel/plugin-proposal-class-properties": "7.16.0",
    "@babel/plugin-proposal-decorators": "7.16.0",
    "@babel/plugin-transform-runtime": "7.16.0",
    "@babel/preset-env": "7.16.0",
    "@babel/runtime": "7.16.0",
    "@krill/web-framework-kernel": "workspace:*",
    "@krill/web-framework-utils": "workspace:*",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-node-resolve": "13.0.6",
    "@rollup/plugin-replace": "3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "commitlint": "13.2.1",
    "eslint": "8.1.0",
    "husky": "7.0.4",
    "lerna": "4.0.0",
    "lint-staged": "11.2.6",
    "postcss": "8.3.11",
    "prettier": "2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "2.58.3",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-postcss": "4.0.1",
    "rollup-plugin-typescript2": "^0.30.0",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  }
}
